{% if type %} 
	{% assign typeClassName = "section-header__" | append: type %} 
{%else %} 
	{% assign typeClassName = "" %} 
{% endif %}

<header class="grid section-header {{ typeClassName }}">
	<h2 class="section-header__title">{{ title }}</h2>
	<span class="section-header__number {{ spinningWheel }}">
		{{ number }}
		{% if spinningWheel %}
			<div class="section-header__circle">
				<img src="/assets/svg/circle-text.svg" alt="circular text spinning like a wheel, it says: into behavior - into information - into knowledge - into utility">
			</div>
		{% endif %}
	</span>
</header>
